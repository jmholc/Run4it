<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adm.pantallas.VerificarMail"
    android:background="#37474F">

    <TextView
        android:id="@+id/txt_Verificar"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:text="@string/VerificarMail_txt"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#9E9E9E"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="83dp" />

    <EditText
        android:id="@+id/et_Verificar"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textSize="22dp"
        android:textColorHint="#9E9E9E"
        android:textColor="#9E9E9E"
        android:inputType="phone"
        android:digits="0123456789"
        android:hint="@string/VerificarMail_et"
        android:maxLength="6"
        android:backgroundTint="@android:color/holo_orange_dark"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Verificar"
        app:layout_constraintVertical_bias="0.201"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.431" />

    <Button
        android:id="@+id/btnCodigo"
        android:layout_width="185dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="93dp"
        android:text="Comprobar"
        android:textSize="20dp"
        android:onClick="checkCodigo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Verificar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#212121"
        android:background="@drawable/button"
        app:layout_constraintHorizontal_bias="0.502" />
</android.support.constraint.ConstraintLayout>
