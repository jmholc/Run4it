<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="76dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_corredor"
        app:srcCompat="@drawable/ic_corredor"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txUsernameRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="33dp"
        android:text="Username"
        android:textColor="@color/dot_dark_Intro1"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txTipoRec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Tipo"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/txUsernameRec"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txCantidadRec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/txTipoRec"
        app:layout_constraintTop_toBottomOf="@+id/txTipoRec" />

    <Button
        android:id="@+id/btnAceptarDesafio"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Aceptar desafio"
        app:layout_constraintLeft_toRightOf="@+id/txTipoRec"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="33dp" />

</android.support.constraint.ConstraintLayout>