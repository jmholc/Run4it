<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnComenzar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:onClick="Comenzar"
        android:text="Comenzar"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/lblLatlon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0, 0.0" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIRECCION" />

    <TextView
        android:id="@+id/lblAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALTURA" />

    <TextView
        android:id="@+id/lblVelocidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XX KM/H" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="148dp"
        android:layout_height="154dp"
        app:srcCompat="@drawable/botonpausa" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="148dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/botonstop" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adm.pantallas.MapsActivity" />

</LinearLayout>