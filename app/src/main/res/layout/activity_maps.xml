    <TextView
        android:id="@+id/lblLatlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0.0, 0.0"
        android:textColor="#9E9E9E"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteY="203dp"
        app:layout_constraintHorizontal_bias="0.314" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="164dp"
        android:layout_height="89dp"
        android:text="DIRECCION"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"

        android:textColor="#9E9E9E"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="266dp"
        tools:layout_editor_absoluteX="77dp" />

    <TextView
        android:id="@+id/lblAltura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ALTURA"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/lblDireccion"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lblDireccion"

        android:textColor="#9E9E9E"
        android:textSize="30dp"
        android:layout_marginTop="59dp" />

    <TextView
        android:id="@+id/lblVelocidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XX KM/H"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"

        android:textColor="#9E9E9E"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="347dp"
        tools:layout_editor_absoluteX="64dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginTop="8dp"
        android:textColor="#9E9E9E"
        android:textSize="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnComenzar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/botonpausa"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/btnComenzar"
        android:layout_width="89dp"
        android:layout_height="101dp"
        android:layout_marginBottom="3dp"
        android:onClick="Comenzar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/botonplay"
        tools:layout_editor_absoluteX="89dp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="720dp"
        android:layout_height="100dp"
        tools:context="com.example.adm.pantallas.MapsActivity"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="141dp"
        android:layout_height="73dp"
        android:background="@drawable/button"
        android:text="Terminar"
        android:textColor="#212121"
        android:textSize="21dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintVertical_bias="0.983"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="141dp"
        android:layout_height="73dp"
        android:background="@drawable/button"
        android:text="Empezar"
        android:textColor="#212121"
        android:textSize="21dp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.983"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>